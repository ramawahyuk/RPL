                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/lerenganteng"
                    android:src="@drawable/lerenganteng"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_bukitMoko"
                    android:text="Tujuan wisata di Cimenyan, Bandung, Jawa Barat"
                    android:layout_margin="10dp"
                    android:textSize="14sp"
                    android:layout_below="@id/lerenganteng"/>

                <Button
                    android:id="@+id/iv_favoriteMoko"
                    android:background="@drawable/ic_unfavorite"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

