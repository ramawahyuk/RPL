<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e3e3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tebing Keraton -->
        <android.support.v7.widget.CardView
            android:id="@+id/card_tebing"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btn_tebingkeraton"
                    android:src="@drawable/tebing"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:onClick="img_tebingkeraton"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_transStudio"
                    android:text="Taman Wisata Tebing Keraton di Dago Pakar, Jawa Barat"
                    android:layout_margin="10dp"
                    android:textSize="14sp"
                    android:layout_below="@id/btn_tebingkeraton"/>

                <Button
                    android:id="@+id/iv_favoriteTranstudio"
                    android:background="@drawable/ic_unfavorite"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- Lereng Anteng -->
        <android.support.v7.widget.CardView
            android:id="@+id/card_lerenganteng"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="5dp">
