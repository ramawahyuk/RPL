<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".tentang">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="283dp"
        android:layout_height="522dp"
        android:layout_centerInParent="true"
        android:alpha="0.7"
        android:background="#ffff">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="99dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="166dp"
            android:src="@drawable/ic_app_icon3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="197dp"
            android:gravity="center"
            android:text="BETA VERSION"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="226dp"
            android:text="RAME"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="95dp"
            android:text="Contact Us"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="milspecmonkeys@gmail.com" />

        <ImageView
            android:id="@+id/face"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/insta"
            android:layout_marginEnd="84dp"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/insta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:src="@drawable/insta" />

        <ImageView
            android:id="@+id/twt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/face"
            android:layout_toStartOf="@+id/textView7"
            android:src="@drawable/twt" />


    </RelativeLayout>

</RelativeLayout>